@model TravelWebsite.Models.Services

@{
    ViewBag.Title = "Add Services";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title px-4 pt-3">Add Services</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("Services", "Admin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
                {
                    <table class="table tablesorter">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>
                                    Package Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center">
                                <td>
                                    <select name="Service" class="py-2 px-3">
                                        <option>Select Service</option>
                                        <option>Bus</option>
                                        <option>Train</option>
                                        <option>Airplane</option>
                                        <option>Hotels</option>
                                        <option>Restaurant</option>
                                        <option>Resort</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="file" name="image" class="form-control" />
                                </td>
                                <td>
                                    @Html.TextAreaFor(x => x.Description)
                                </td>
                                <td>
                                    <input type="submit" value="Add" class="btn btn-danger" />
                                </td>
</tbody>
                    </table>
                    <h3 class="text-danger d-flex justify-content-center align-items-center">@ViewBag.sv</h3>
                }
            </div>
        </div>
    </div>
</div>

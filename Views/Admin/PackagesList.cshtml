@model IEnumerable<TravelWebsite.Models.Package>

@{
    ViewBag.Title = "PackagesList";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title px-4 pt-3 m-0">Packages List</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("PackagesList", "Admin", FormMethod.Get))
                {
                    <table class="table tablesorter">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>
                                    #
                                </th>
                                <th>
                                    Offer
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Description
                                </th>
                            </tr>
                        </thead>
                        @foreach (var p in Model)
                        {
                            var img = p.Image.Replace(Server.MapPath("~/Images"), "/Images");
                            <tbody>
                                <tr class="text-center">
                                    <td>@p.ID</td>
                                    <td>@p.Offer</td>
                                    <td>
                                        <div>
                                            <img src="@img" style="width: 50px" />
                                        </div>
                                    </td>
                                    <td>@p.Description</td>
                            </tbody>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
@model TravelWebsite.Models.Package
@{
    ViewBag.Title = "AddPackages";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title mb-0 px-2">Add Packages</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("AddPackages", "Admin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
                {
                    <table class="table tablesorter">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>
                                    Package Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center">
                                <td>
                                    <select name="Offers" class="py-2 px-3">
                                        <option>Seclect Offer</option>
                                        <option>Bronze Offer</option>
                                        <option>Silver Offer</option>
                                        <option>Golden Offer</option>
                                        <option>Premium Offer</option>
                                        <option>Diamond Offer</option>
                                        <option>Platinum Offer</option>
                                        <option>Saphire Offer</option>
                                    </select>
                                </td>
                                <td>
                                    <input type="file" name="image" class="form-control" />
                                </td>
                                <td class="text-area">
                                    @Html.TextAreaFor(x => x.Description)
                                </td>
                                <td>
                                    <input type="submit" value="Add" class="btn btn-danger" />
                                </td>

                        </tbody>
                    </table>
                    <h3 class="text-danger d-flex justify-content-center align-items-center">@ViewBag.pk</h3>
                }
            </div>
        </div>
    </div>
</div>
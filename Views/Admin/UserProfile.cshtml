@model IEnumerable<TravelWebsite.Models.Login>

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title px-4 pt-3 m-0">User List</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("UserProfile", "Admin", FormMethod.Get))
                {
                    <table class="table tablesorter">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>
                                    #
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Password
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        @foreach (var u in Model)
                        {
                            <tbody>
                                <tr class="text-center">
                                    <td>@u.ID</td>
                                    <td>@u.Email</td>
                                    <td>@u.Password</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button id="delete" class="btn btn-danger px-3 py-2">
                                                <a href="@Url.Action("DeleteUser", new { u.ID})">Delete</a>
                                            </button>
                                        </div>
                                    </td>
                            </tbody>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>
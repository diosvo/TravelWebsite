@model TravelWebsite.Models.Login

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title px-4 pt-3 m-0">Add User</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
                {
                    <table class="table tablesorter">
                        <thead class="text-primary">
                            <tr class="text-center">
                                <th>
                                    #
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Password
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="text-center">
                                <td class="form-group">
                                    @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
                                </td>
                                <td class="form-group">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                </td>
                                <td class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                </td>
                                <td>
                                    <input type="submit" value="Add" class="btn btn-danger" />
                                </td>
                        </tbody>
                    </table>
                    <h3 class="text-danger d-flex justify-content-center align-items-center m-0 mt-3">@ViewBag.Error</h3>
                }
            </div>
        </div>
    </div>
</div>

